<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="pick_box" params="parent">
        <!--joint between {parent} and box-->
        <joint name="${parent}_box" type="floating">
            <xacro:insert_block name="origin"/>
            <parent link="${parent}"/>
            <child link="$box"/>
        </joint>
        <link name="box">
            <inertial>
                <origin xyz="0 0.4 0.087" rpy="0 0 0"/>
                <mass value="1.0" />
                <inertia  ixx="0.1667" ixy="0.0"  ixz="0.0"  iyy="0.1667"  iyz="0.0"  izz="0.1667" />
            </inertial>
            <visual>
                <origin xyz="0 0.4 0.087" rpy="0 0 0"/>
                <geometry>
                    <box size="0.025 0.025 0.025" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0.4 0.087" rpy="0 0 0"/>
                <geometry>
                    <box size="0.025 0.025 0.025" />
                </geometry>
            </collision>
        </link>
    </xacro:macro>
</robot>
